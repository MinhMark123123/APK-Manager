<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- before -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading3"
        android:background="@drawable/bg_item_lv"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/pading5" >

            <ImageView
                android:id="@+id/img_icon_apk"
                style="@style/image_main_listview"
                android:src="@drawable/ic_app4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pading10"
                android:paddingRight="@dimen/pading5" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_apk_name"
                        style="@style/textmedium_listview"
                        android:layout_weight="0.99"
                        android:text="1. Songoku Dai Chien Ngoc"
                        android:textColor="@color/title" />

                    <ImageView
                        android:id="@+id/img_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.01"
                        android:padding="@dimen/pading5"
                        android:src="@drawable/ic_mng_option" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_apk_directory"
                        style="@style/textsmall_listview_apk"
                        android:layout_weight="0.99"
                        android:text="Phiên bản hiện tại: 1.4 "
                        android:textColor="@color/description" />

                    <TextView
                        android:id="@+id/tv_apk_size"
                        style="@style/textsmall_listview_apk"
                        android:layout_weight="0.01"
                        android:text="1.5MB"
                        android:maxLines="1"
                        android:textColor="@color/description" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_app_status"
                    style="@style/textsmall_listview_apk"
                    android:layout_weight="0.33"
                    android:text="Trạng thái ứng dụng: An toàn"
                    android:textColor="@color/text_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- end -->

</LinearLayout>