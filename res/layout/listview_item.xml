<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- before -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading3"
        android:background="@drawable/bg_item_lv"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/pading5" >

            <ImageView
                android:id="@+id/listview_item_imageview"
                android:layout_width="@dimen/size_logo_lv"
                android:layout_height="@dimen/size_logo_lv"
                android:src="@drawable/ic_app4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pading10"
                android:paddingRight="@dimen/pading3" >

                <TextView
                    android:id="@+id/listview_item_nameapp"
                    style="@style/textmedium_listview"
                    android:layout_weight="0.33"
                    android:text="1. Songoku Dai Chien Ngoc"
                    android:textColor="@color/title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/listview_item_nameshort"
                        style="@style/textsmall_listview_apk"
                        android:layout_weight="0.95"
                        android:text="Songoku "
                        android:textColor="@color/description" />

                    <ImageView
                        android:id="@+id/img_download"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.05"
                        android:src="@drawable/ic_download_free" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/listview_item_countdown"
                        style="@style/textsmall_listview_apk"
                        android:layout_weight="0.6"
                        android:maxLines="1"
                        android:text="Lượt tải: 1323.298.232"
                        android:textColor="@color/description" />

                    <TextView
                        android:id="@+id/listview_item_size"
                        style="@style/textsmall_listview_apk"
                        android:layout_weight="0.4"
                        android:paddingRight="@dimen/pading20"
                        android:text="4.9MB" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- end -->

</LinearLayout>