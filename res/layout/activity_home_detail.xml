                    android:layout_weight="0.1"
                    android:text="@string/taive"
                    android:textColor="@color/bg_button"
                    android:textSize="@dimen/size_text_decrip" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="@dimen/menu_left_indicator_width"
            android:layout_marginRight="@dimen/margin_menu"
            android:background="@color/menu_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading10" >

            <TextView
                android:id="@+id/textView1077"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:text="@string/cungdanhmuc"
                android:textColor="@color/title"
                android:textSize="@dimen/size_title_text" />

            <Button
                android:id="@+id/imageButton177"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.05"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:text="@string/xemthem"
                android:visibility="gone"
                android:textColor="@color/trang"
                android:textSize="@dimen/size_text_decrip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/pading10"
            android:paddingLeft="@dimen/pading5"
            android:paddingRight="@dimen/pading5" >

            <LinearLayout
                style="@style/card_view"
                android:orientation="vertical"
                android:padding="@dimen/pading5" >

                <ImageView
                    android:id="@+id/otIcon"
                    style="@style/image_listview"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:src="@drawable/ic_app1" />

                <TextView
