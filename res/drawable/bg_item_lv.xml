<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#c2c3c5" />

            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="2px">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>